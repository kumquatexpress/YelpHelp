<%- model_class = Review -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:review_id) %></th>
      <th><%= model_class.human_attribute_name(:yelp_user_id) %></th>
      <th><%= model_class.human_attribute_name(:stars) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:text) %></th>
      <th><%= model_class.human_attribute_name(:business_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= link_to review.id, review_path(review) %></td>
        <td><%= review.review_id %></td>
        <td><%= review.yelp_user_id %></td>
        <td><%= review.stars %></td>
        <td><%= review.date %></td>
        <td><%= review.text %></td>
        <td><%= review.business_id %></td>
        <td><%=l review.created_at %></td>
        <td>
          <%= link_to "Show", review, :class => 'btn' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
