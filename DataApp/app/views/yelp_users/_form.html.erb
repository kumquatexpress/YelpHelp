<%= form_for @yelp_user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :url, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :average_stars, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :average_stars, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :review_count, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :review_count, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                yelp_users_path, :class => 'btn' %>
  </div>
<% end %>
